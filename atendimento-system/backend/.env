DB_HOST=localhost            # Endereço do banco de dados (pode ser localhost para desenvolvimento)
DB_USER=root                 # Usuário do banco de dados
DB_PASSWORD=yourpassword     # Senha do banco de dados
DB_NAME=yourdatabase         # Nome do banco de dados

# Configurações do servidor
PORT=3002                    # A porta em que seu backend vai rodar (padrão 3002)
FRONTEND_URL=http://localhost:3000   # A URL do frontend (React), geralmente localhost:3000 no desenvolvimento

# (Opcional) Configurações adicionais
NODE_ENV=development